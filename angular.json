{
    "version": 1,
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "newProjectRoot": "projects",
    "projects": {
        "ricky-and-morty-angular": {
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:application",
                    "configurations": {
                        "development": {
                            "extractLicenses": false,
                            "optimization": false,
                            "sourceMap": true
                        },
                        "production": {
                            "budgets": [
                                {
                                    "maximumError": "1mb",
                                    "maximumWarning": "500kb",
                                    "type": "initial"
                                },
                                {
                                    "maximumError": "4kb",
                                    "maximumWarning": "2kb",
                                    "type": "anyComponentStyle"
                                }
                            ],
                            "outputHashing": "all"
                        }
                    },
                    "defaultConfiguration": "production",
                    "options": {
                        "scripts": [
                            "node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"
                        ],
                        "assets": ["src/favicon.ico", "src/assets"],
                        "browser": "src/main.ts",
                        "index": "src/index.html",
                        "inlineStyleLanguage": "scss",
                        "outputPath": "dist/ricky-and-morty-angular",
                        "polyfills": ["zone.js"],
                        "styles": [
                          "@angular/material/prebuilt-themes/indigo-pink.css",
                          "node_modules/bootstrap/dist/css/bootstrap.min.css",
                          "src/styles.scss"
                        ],
                        "tsConfig": "tsconfig.app.json"
                    }
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "buildTarget": "ricky-and-morty-angular:build"
                    }
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "configurations": {
                        "development": {
                            "buildTarget": "ricky-and-morty-angular:build:development"
                        },
                        "production": {
                            "buildTarget": "ricky-and-morty-angular:build:production"
                        }
                    },
                    "defaultConfiguration": "development"
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "scripts": [],
                        "assets": ["src/favicon.ico", "src/assets"],
                        "inlineStyleLanguage": "scss",
                        "polyfills": ["zone.js", "zone.js/testing"],
                        "styles": [
                          "@angular/material/prebuilt-themes/indigo-pink.css",
                          "src/styles.scss"
                        ],
                        "tsConfig": "tsconfig.spec.json"
                    }
                }
            },
            "projectType": "application",
            "root": "",
            "schematics": {
                "@schematics/angular:component": {
                    "inlineStyle": true,
                    "inlineTemplate": true,
                    "style": "scss"
                }
            },
            "sourceRoot": "src"
        }
    }
}
